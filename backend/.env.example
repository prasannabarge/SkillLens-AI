# Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# NODE ENVIRONMENT
# ============================================
NODE_ENV=development

# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=5000
HOST=localhost

# ============================================
# MONGODB ATLAS
# ============================================
# Local MongoDB (for development)
# MONGODB_URI=mongodb://localhost:27017/skilllens

# MongoDB Atlas (for production)
# Replace with your actual MongoDB Atlas connection string
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/skilllens?retryWrites=true&w=majority

# Database name (if not specified in URI)
DB_NAME=skilllens

# ============================================
# AUTHENTICATION
# ============================================
# JWT Secret - CHANGE THIS IN PRODUCTION!
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long

# JWT Expiration
JWT_EXPIRES_IN=7d

# JWT Refresh Token Expiration
JWT_REFRESH_EXPIRES_IN=30d

# Password Reset Token Expiration (in minutes)
PASSWORD_RESET_EXPIRES=10

# ============================================
# NLP MICROSERVICE
# ============================================
NLP_SERVICE_URL=http://localhost:8000
NLP_SERVICE_TIMEOUT=30000

# ============================================
# CORS CONFIGURATION
# ============================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# FILE UPLOAD
# ============================================
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=debug

# ============================================
# EMAIL (Optional - for password reset)
# ============================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# EMAIL_FROM=SkillLens <noreply@skilllens.app>
